@model RetailBay.WebShop.Models.Checkout.IndexViewModel

@{
    ViewData["Title"] = "Shipping Address";
    Layout = "_LayoutCheckout";
}

    <div class="column is-7 container checkout-shipping-container">
        @if (Model.ShippingAddress == null)
        {
            <partial name="Shipping/_AddShippingAddress" model="new RetailBay.WebShop.Models.Checkout.AddressDTO()" />
        }
        else
        {
            <partial name="Shipping/_EditShippingAddress" model="Model.ShippingAddress" />
        }
    </div>

<div class="column is-5 checkout-items-container">
    <partial name="Items/_CheckoutItems" model="Model.CartItems" />
    <partial name="Items/_GiftCard" />
    <partial name="Items/_TotalAmount" model="Model" />
</div>