            <i class="fas fa-search"></i>
            <input type="text" name="search" placeholder="Search" class="heading-search-btn" />
        </form>
      
        <hr class="heading-hr">

    </div>
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - RetailBay.WebShop</p>
        </footer>
    </div>
   
    @RenderSection("Scripts", required: false)
