@model CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="page-header">
    <div class="row">
        <div class="col-md-8">
            <h2>Create Product</h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <section>
            <form asp-area="Catalog" asp-controller="Products" asp-action="Create" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label form-label"></label>
                    <input asp-for="Name" class="form-control form-input form-input-center" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label form-label"></label>
                    <input asp-for="Description" class="form-control form-input form-input-center" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label form-label"></label>
                    <input asp-for="Price" class="form-control form-input form-input-center" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="IsPublished">
                            <input asp-for="IsPublished" />
                            @Html.DisplayNameFor(m => m.IsPublished)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-brand btn-brand-big">Save</button>
                </div>
            </form>
        </section>
    </div>
</div>