@model EditProductCategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="page-header">
    <div class="row">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <section>
            <form asp-area="Catalog" asp-controller="Categories" asp-action="Edit" method="post" class="form-horizontal">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Abrv" />

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label form-label"></label>
                    <input asp-for="Name" class="form-control form-input form-input-center" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <label asp-for="Slug" class="control-label form-label"></label>
                    <input asp-for="Slug" class="form-control form-input form-input-center" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-brand btn-brand-big">Save</button>
                </div>
            </form>
        </section>
    </div>
</div>